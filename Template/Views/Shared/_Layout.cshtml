@{    
    var ArticuloBag = (List<ArticuloItemBag>)HttpContext.Current.Session["ArticuloBag"] ?? new List<ArticuloItemBag>();  
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema - @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,600,700" rel="stylesheet">    
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/css/theme.light.css" rel="stylesheet" />
    <link href="~/Scripts/toastr/toastr.min.css" rel="stylesheet" />   
    <link href="~/Scripts/sweetAlert/sweetalert.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="page-container" class="fade page-sidebar-fixed page-header-fixed in">
        <div class="header navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="~/" class="navbar-brand">
                        <span>
                            <img src="~/Content/img/logo.png" />
                        </span>
                    </a>
                    <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!--navbar right-->
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden-xs">
                        <form action="~/buscar" class="navbar-form full-width">
                            <div class="form-group">
                                <input type="text" class="form-control" name="keywords" placeholder="Buscar..." autocomplete="off" />
                                <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:;" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="fa fa-clone fa-lg"></i>
                        </a>
                        <ul class="dropdown-menu pull-right bigmenu animated flipInX">
                            <li>
                                <div class="row">
                                    <div class="col-sm-4 col-xs-6">
                                        <a href="javascript:;">
                                            <i class="fa fa-cogs fa-3x text-info"></i>
                                            <h5>Configurar</h5>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-xs-6">
                                        <a>
                                            <i class="fa fa-calendar-check-o fa-3x text-warning"></i>
                                            <h5>Agenda</h5>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-xs-6">
                                        <a>
                                            <i class="fa fa-comment-o fa-3x text-success"></i>
                                            <h5>Chat</h5>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-xs-6">
                                        <a>
                                            <i class="fa fa-address-card-o fa-3x text-info"></i>
                                            <h5>Personal</h5>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-xs-6">
                                        <a>
                                            <i class="fa fa-file-text-o fa-3x text-danger"></i>
                                            <h5>Publicaciones</h5>
                                        </a>
                                    </div>
                                    <div class="col-sm-4 col-xs-6">
                                        <a>
                                            <i class="fa fa-star-o fa-3x text-success"></i>
                                            <h5>Favoritos</h5>
                                        </a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown dropdown-list notifications">
                        <a href="javascript:;" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="fa fa-bell-o fa-lg"></i>
                            <span class="label list-count">2</span>
                        </a>
                        <ul class="dropdown-menu animated fadeInDown" data-url="@Url.Content("~/Notificaciones/")"></ul>                        
                    </li>
                    <li class="dropdown dropdown-list">
                        <a href="javascript:;" data-toggle="dropdown" class="dropdown-toggle">
                            <i class="fa fa-opencart fa-lg"></i>                            
                            <span class="label list-count">@ArticuloBag.Count</span>
                        </a>
                        <ul class="dropdown-menu animated fadeInDown" data-url="@Url.Content("~/Articulo/")"></ul>
                    </li>
                    <li class="dropdown navbar-user">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">                            
                            <i class="fa fa-user-o fa-lg"></i>
                            <span class="hidden-xs">
                                <span></span>
                            </span> <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu animated fadeInLeft">
                            <li class="arrow"></li>
                            <li>
                                <a href="#">Editar perfil</a>
                            </li>                           
                            <li class="divider"></li>
                            <li>
                                <a href="~/account/logout">Cerrar Sesión</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div id="sidebar" class="sidebar animated fadeInUp">
            <div data-scrollbar="true" data-height="100%">
                <ul class="nav">
                    <li class="nav-profile">
                        <div class="image">
                            <a href="javascript:;"><img src="~/Content/img/avatar.png" alt=""></a>
                        </div>
                        <div class="info">
                            @SessionHelper.User.Nombres 
                            <small>@SessionHelper.User.ApellidoPaterno @SessionHelper.User.ApellidoMaterno</small>
                        </div>
                    </li>
                    <li class="nav-header">Sistema de Gestión &reg; Panel</li>
                    <li class="has-sub">
                        <a href="~/"><i class="fa fa-desktop"></i><span>Pantalla principal</span></a>
                    </li>
                    <li class="has-sub">
                        <a href="javascript:;">                            
                            <b class="caret pull-right"></b>
                            <i class="fa fa-folder-open-o"></i>
                            <span>Menú Level</span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="#">Opción del menú</a></li>
                            <li><a href="#">Opción del menú</a></li>
                            <li><a href="#">Opción del menú</a></li>
                        </ul>
                    </li>
                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-folder-open-o"></i>
                            <span>Menú Level</span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="#">Opción del menú</a></li>
                            <li><a href="#">Opción del menú</a></li>
                        </ul>
                    </li>
                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-folder-open-o"></i>
                            <span>Menu Level</span>
                        </a>
                        <ul class="sub-menu">
                            <li class="has-sub">
                                <a href="javascript:;">
                                    <b class="caret pull-right"></b>
                                    Menu 1.1
                                </a>
                                <ul class="sub-menu">
                                    <li class="has-sub">
                                        <a href="javascript:;">
                                            <b class="caret pull-right"></b>
                                            Menu 2.1
                                        </a>
                                        <ul class="sub-menu">
                                            <li><a href="javascript:;">Menu 3.1</a></li>
                                            <li><a href="javascript:;">Menu 3.2</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="~/buscar">Menu 2.2</a></li>
                                    <li><a href="javascript:;">Menu 2.3</a></li>
                                </ul>
                            </li>
                            <li><a href="javascript:;">Menu 1.2</a></li>
                            <li><a href="javascript:;">Menu 1.3</a></li>
                        </ul>
                    </li>
                    <li><a href="javascript:;" class="sidebar-minify-btn animated fadeInRight" data-click="sidebar-minify"><i class="fa fa-angle-double-left"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="sidebar-bg"></div>
        <div class="content">@RenderBody()</div>
    </div>

    <div class="loading">
        <div class="loading-content">
            <div><i class="fa fa-spinner fa-spin fa-3x"></i></div>
            <div class="loading-text">Procesando</div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/toastr/toastr.min.js"></script>
    <script src="~/Scripts/sweetAlert/sweetalert.min.js"></script>
    <script src="~/Scripts/js/init.js"></script>
    <script src="~/Scripts/js/layout.js"></script>
    <script src="~/Scripts/js/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
