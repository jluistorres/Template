@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema - @ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fonts/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/css/theme.default.css" rel="stylesheet" />
    <link href="~/Scripts/toastr/toastr.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>

    <div id="page-container" class="fade page-sidebar-fixed page-header-fixed in">
        <div class="header navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="~/" class="navbar-brand">
                        <span>
                            <img src="~/Content/img/logo.png" />
                        </span>
                    </a>
                    <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--navbar right-->
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="javascript:;" data-toggle="dropdown" class="dropdown-toggle f-s-14">
                                <i class="fa fa-bell-o fa-lg"></i>
                            </a>
                            <ul class="dropdown-menu media-list pull-right animated fadeInDown">
                                <li class="dropdown-header">Notificaciones (<span>0</span>)</li>
                                <li class="dropdown-footer text-center"></li>
                            </ul>
                        </li>
                        <li class="dropdown navbar-user">
                            <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <img src="~/content/img/avatar.png">
                                <span class="hidden-xs">
                                    <span></span>
                                </span> <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu animated fadeInLeft">
                                <li class="arrow"></li>
                                <li>
                                    <a href="#">Ver Perfil</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">Cerrar Sesión</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="sidebar" class="sidebar animated fadeInUp">
            <div data-scrollbar="true" data-height="100%">
                <ul class="nav">
                    <li class="nav-header">Menu</li>
                    <li class="has-sub active">
                        <a href="~/"><i class="fa fa-laptop"></i><span>Pantalla principal</span></a>
                    </li>
                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-suitcase"></i>
                            <span>Menú Level 1</span>
                        </a>
                        <ul class="sub-menu">
                            <li>
                                <a href="#">Opción del menú</a>
                            </li>
                            <li>
                                <a href="#">Opción del menú</a>
                            </li>
                        </ul>
                    </li>
                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-folder-open"></i>
                            <span>Menú Level 2</span>
                        </a>
                        <ul class="sub-menu">
                            <li>
                                <a href="#">Opción del menú</a>
                            </li>
                            <li>
                                <a href="#">Opción del menú</a>
                            </li>
                        </ul>
                    </li>
                    <li><a href="javascript:;" class="sidebar-minify-btn animated fadeInRight" data-click="sidebar-minify"><i class="fa fa-angle-double-left"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="sidebar-bg"></div>
        <div class="content">@RenderBody()</div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/toastr/toastr.min.js"></script>
    <script src="~/Scripts/js/init.js"></script>
    <script src="~/Scripts/js/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
